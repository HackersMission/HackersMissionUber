<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25272d">

    <TextView
        android:id="@+id/textViewSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:maxLines="1"
        android:maxWidth="300dp"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/textViewSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#80FFFFFF"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text=""
        android:layout_below="@+id/textViewSong"/>


    <co.mobiwise.playerview.MusicPlayerView
        android:id="@+id/mpv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textViewSinger"
        app:textSize = "14sp"
        app:textColor = "#80FFFFFF"
        app:buttonColor = "#eb5902"
        app:progressLoadedColor = "#db430e"/>

    <ImageView
        android:id="@+id/like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_like"
        android:layout_below="@+id/mpv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="click_praise"/>


    <ImageView
        android:id="@+id/next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_next"
        android:layout_below="@+id/mpv"
        android:layout_alignRight="@+id/mpv"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="click_play_next"/>


    <ImageView
        android:id="@+id/previous"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_previous"
        android:layout_below="@+id/mpv"
        android:layout_alignLeft="@+id/mpv"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="click_change"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#c1c1c1"
        android:textSize="18sp"
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewSong" />
    <TextView
        android:id="@+id/status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewSong"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewSong"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/status3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewSong"
        android:visibility="invisible"
        />

</RelativeLayout>
